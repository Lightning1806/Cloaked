<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cloaked" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/burnt_orange_600</item>
        <item name="colorSecondaryVariant">@color/burnt_orange_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/blue_900</item>
        <item name="android:windowBackground">@color/dark_grey_900</item>
        <item name="buttonStyle">@color/blue_800</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_50</item>
        <item name="fontFamily">@font/actor</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>